{
	"devDependencies": {
		"lerna": "^2.5.1",
		"npm-run-all": "^4.1.3",
		"ts-node": "^6.1.1",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^2.9.2"
	},
	"scripts": {
		"prepare": "lerna bootstrap",
		"dev": "run-p -l postgres ui-dev api-dev",
		"postgres": "docker-compose -f docker-compose.dev.yml up",
		"ui-dev": "lerna exec --scope tic-tac-toe-client -- PORT=3001 yarn watch",
		"api-dev": "lerna exec --scope tic-tac-toe-server -- yarn dev",
		"build": "docker-compose build",
		"prestart": "yarn build",
		"start": "./scripts/secrets.sh && ./scripts/start.sh",
		"stop": "./scripts/stop.sh"
	},
	"dependencies": {}
}
