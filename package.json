{
	"devDependencies": {
		"lerna": "^2.5.1",
		"npm-run-all": "^4.1.3",
		"ts-node": "^6.1.1",
		"typescript": "^2.9.2"
	},
	"scripts": {
		"prepare": "lerna bootstrap",
		"dev": "run-p -l ui-dev api-dev mongo",
		"mongo": "docker run -p 27017:27017 mongo",
		"ui-dev": "lerna exec --scope tic-tac-toe-client -- PORT=3001 yarn start",
		"api-dev": "lerna exec --scope tic-tac-toe-server -- yarn dev",
		"build": "docker-compose build",
		"start": "docker-compose up"
	},
	"dependencies": {}
}
